{
  "name": "stackivy",
  "version": "1.0.0",
  "main": "app.ts",
  "license": "MIT",
  "scripts": {
    "dev:notification": "nodemon notification/src/server.ts",
    "dev:user-wallet": "nodemon user-wallet/src/server.ts",
    "dev:user-management": "nodemon user-management/src/server.ts",
    "dev": "concurrently \"yarn dev:notification\" \"yarn dev:user-wallet\" \"yarn dev:user-management\"",

    "build": "rimraf dist && tsc",
    "start:pre": "ts-node src/server.ts",
    "start": "node dist/server.js",
    "start:prod": "pm2 start service",
    "lint": "eslint . --ext .ts . --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "jest"
  },
  "dependencies": {
    "amqplib": "^0.10.4",
    "argon2": "^0.40.1",
    "axios": "^1.7.1",
    "base64url": "^3.0.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.4.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.1.1",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.14",
    "reflect-metadata": "^0.2.1",
    "twilio": "^5.2.0",
    "winston": "^3.13.0"
  },
  "devDependencies": {
    "@types/amqplib": "^0.10.5",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.11.16",
    "@types/node-cron": "^3.0.11",
    "@types/nodemailer": "^6.4.14",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "nodemon": "^3.0.3",
    "prettier": "^3.2.5",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
